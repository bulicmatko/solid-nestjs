{
  "name": "solid-nestjs",
  "version": "0.1.0",
  "description": "SOLID NestJS",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:format": "prisma format --schema ./src/modules/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema ./src/modules/prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema ./src/modules/prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema ./src/modules/prisma/schema.prisma",
    "prisma:db:pull": "prisma db pull --schema ./src/modules/prisma/schema.prisma",
    "prisma:db:push": "prisma db push --schema ./src/modules/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema ./src/modules/prisma/schema.prisma",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@casl/ability": "^5.4.3",
    "@casl/prisma": "^1.0.1",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.0.0",
    "@nestjs/event-emitter": "^1.0.0",
    "@nestjs/graphql": "^9.1.2",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.1.0",
    "@nestjs/platform-express": "^8.0.0",
    "@node-redis/client": "^1.0.4",
    "@prisma/client": "^3.12.0",
    "apollo-server-express": "^3.6.2",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "date-fns": "^2.28.0",
    "graphql": "^15.8.0",
    "graphql-redis-subscriptions": "^2.4.2",
    "nodemailer": "^6.7.2",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "prisma": "^3.12.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

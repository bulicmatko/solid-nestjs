{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@core/(.*)": "<rootDir>/../src/core/$1",
    "@core": "<rootDir>/../src/core",
    "@modules/(.*)": "<rootDir>/../src/modules/$1",
    "@modules": "<rootDir>/../src/modules"
  }
}
